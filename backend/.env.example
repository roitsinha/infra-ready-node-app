# .env.example

# Port the backend server listens on
PORT=3000

# PostgreSQL connection string for development database
DATABASE_URL=postgresql://postgres:password@localhost:5432/infra_ready_db

# PostgreSQL connection string for test database (used by Jest tests)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/infra_ready_db_test

# Optional: Individual Postgres connection parameters (useful for some tools or advanced configs)
PGUSER=postgres
PGPASSWORD=password
PGHOST=localhost
PGPORT=5432
PGDATABASE=infra_ready_db
